{
  "mongo": {
    "connection": "mongodb://localhost:27017/koa-pomelo",
    "options": {}
  },
  "server": {
    "port": 1699
  },
  "auth": {
    "url": {
      "login": "/login",
      "success": "/success",
      "failure": "/failure",
      "unauth": "/login"
    },
    "storage": {
      "model-name": "User",
      "username-field-name": "name",
      "password-field-name": "password",
      "salt-field-name": "salt"
    },
    "pass-through": [
      "/www/static/*"
    ]
  }
}